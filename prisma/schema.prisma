generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Station {
  id            String    @id @default(uuid())
  ocppId        String
  name          String
  location      String?
  status        String
  lastHeartbeat DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  guns          Gun[]
}

model Gun {
  id               String   @id @default(uuid())
  stationId        String
  connectorNumber  Int
  status           String
  blocked          Boolean  @default(false)
  lastStatusChange DateTime @default(now())
  meterValue       Float?
  station          Station  @relation(fields: [stationId], references: [id])
}

model OcppLog {
  id          String   @id @default(uuid())
  stationId   String
  gunId       String
  messageType String
  action      String
  payload     Json
  timestamp   DateTime @default(now())
}

model Transaction {
  id         String    @id @default(uuid())
  stationId  String
  gunId      String
  startTime  DateTime
  endTime    DateTime?
  startMeter Float
  endMeter   Float?
  totalKwh   Float?
  status     String
}
